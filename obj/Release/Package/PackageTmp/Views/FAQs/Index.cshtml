@model IEnumerable<Project_Sem3.Models.FAQ>
@{ int num = 1;}

@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
{
    <script>alert("@ViewBag.SuccessMessage");</script>
}

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <script>alert("@ViewBag.ErrorMessage");</script>
}

<main id="faq">
    <section id="faq" class="faq">
        <div class="container" data-aos="fade-up">
            <div class="row gy-4">
                <div class="col-lg-12">

                    <div class="accordion accordion-flush" id="faqlist" data-aos="fade-up" data-aos-delay="100">
                        @foreach (var m in Model)
                        {
                            <div class="accordion-item">
                                <h3 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq-content-@m.Id">
                                        <span class="num"> @num.</span>
                                        @m.Question
                                    </button>
                                </h3>
                                <div id="faq-content-@m.Id" class="accordion-collapse collapse" data-bs-parent="#faqlist">
                                    <div class="accordion-body">
                                        @m.Answer
                                    </div>
                                </div>
                            </div><!-- # Faq item-->
                            num = num + 1;
                        }
                    </div>

                </div>
            </div>

        </div>
    </section>
</main>
